@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "Index";
}

<div class="bg-primary text-white p-1 m-1">
    <h2>User List</h2>
</div>

<div class="text-danger" asp-validation-summary="ModelOnly"></div>
<table class="table table-bordered table-striped table-sm m-1 p-1">
    <tr>
        <th>User Id</th>
        <th>User Name</th>
        <th>Email</th>
        <th></th>
    </tr>

    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="4" class="text-center">
                No Users
            </td>
        </tr>
    }
    else 
    {
        foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    <form asp-action="Delete" method="post" asp-route-id="@user.Id">
                        <button class="btn btn-danger" type="submit">Delete</button>
                        <a asp-action="Update" class="btn btn-primary" asp-route-id="@user.Id">Edit</a>
                    </form>
                </td>
                
            </tr>
        }
    }
</table>

<a class="btn btn-primary" asp-action="Create">Create User</a>